{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "--delay",
                "${workspaceRoot}/dist/test/index.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true,
            "preLaunchTask": "build"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\dist\\test\\regularApp.test.js",
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ],
            "sourceMaps": true,
            "preLaunchTask": "build"
        }
    ]
}